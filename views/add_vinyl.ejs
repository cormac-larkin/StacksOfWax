<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../globals.css" />
    <link rel="stylesheet" href="../navbar.css" />
    <link rel="stylesheet" href="../add_vinyl.css" />
    <title>Add Vinyl</title>
  </head>
  <body>
    <%- include("./partials/navbar") %>

    <div class="container">
      <header class="form-header">
        <h1 class="main-heading">Add a new Vinyl</h1>
      </header>
      <form class="form" method="POST" action="/vinyls/add">
        <label for="vinyl-name">Vinyl Name</label>
        <input
          type="text"
          id="vinyl-name"
          name="vinylName"
          placeholder="The name of the album/single"
          minlength="1"
          maxlength="50"
          required
        />
        <label for="artist">Artist</label>
        <select id="artist" name="artist">
            <% for( let i = 0; i < artists.length; i++ ) { %>
                <option value='<%= artists[i].name %>'><%= artists[i].name %></option>
            <% } %>
        </select>

        <label for="genre">Genre</label>
        <select id="genre" name="genre">
            <% for( let i = 0; i < genres.length; i++ ) { %>
                <option value=<%= genres[i].name %>><%= genres[i].name %></option>
            <% } %>
        </select>
        <label for="subgenre">Subgenre</label>
        <select id="sub-genre" name="subGenre" size="1">
            <% for( let i = 0; i < genres.length; i++ ) { %>
                <option value='<%= genres[i].name %>'><%= genres[i].name %></option>
            <% } %>
        </select>
        <label for="year">Release Year</label>
        <input
          type="number"
          id="year"
          name="year"
          min="1920"
          max="2023"
          required
        />
        <label for="art">Album Art (URL)</label>
        <input type="text" id="art" name="albumArt" minlength="" />
        <label for="track-count">Number of Tracks</label>
        <input type="number" id="track-count" min="1" max="20" required />

        <button type="button" id="nextBtn">Next</button>
        <button type="submit" id="submitBtn">Add Vinyl</button>
      </form>
    </div>
  </body>
  <script src="../navbar.js"></script>
  <script src="../add_vinyl.js"></script>
</html>
