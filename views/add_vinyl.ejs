      <form class="form" method="POST" action="/vinyls/add">
        <label for="vinyl-name">Vinyl Name</label>
        <input
          type="text"
          id="vinyl-name"
          name="vinylName"
          placeholder="The name of the album/single"
          minlength="1"
          maxlength="50"
          required
        />
        <label for="artist">Artist</label>
        <select id="artist" name="artist" required>
          <option value="" disabled selected>--Select Artist</option>
          <% for( let i = 0; i < artists.length; i++ ) { %>
          <option value="<%= artists[i].name %>"><%= artists[i].name %></option>
          <% } %>
        </select>

        <label for="genre">Genre</label>
        <select id="genre" name="genre" required>
          <option value="" disabled selected>--Select Genre</option>
          <% for( let i = 0; i < genres.length; i++ ) { %>
          <option value="<%=genres[i].name %>"><%= genres[i].name %></option>
          <% } %>
        </select>
        <label for="subgenre">Subgenre</label>
        <select id="sub-genre" name="subGenre" size="1">
